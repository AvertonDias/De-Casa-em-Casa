rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra para obter os dados do próprio usuário
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Verifica se o usuário é Admin ou Dirigente
    function isManager() {
      return getUserData().role in ['Administrador', 'Dirigente'];
    }

    // Verifica se o usuário é Administrador
    function isAdmin() {
      return getUserData().role == 'Administrador';
    }

    // Verifica se o usuário pertence a uma congregação específica
    function belongsToCongregation(congId) {
      return getUserData().congregationId == congId;
    }
    
    // Regras para a Coleção de Usuários
    match /users/{userId} {
      // Permite que um usuário leia e atualize SEU PRÓPRIO perfil.
      allow get, update: if request.auth.uid == userId;

      // Permite que um usuário crie SEU PRÓPRIO perfil (essencial para o cadastro).
      allow create: if request.auth.uid == userId;
      
      // Permite que um administrador exclua qualquer usuário, exceto a si mesmo.
      allow delete: if isAdmin() && request.auth.uid != userId;
      
      // Permite que um admin/dirigente da mesma congregação liste TODOS os usuários.
      // Esta é a regra que corrige o problema de "usuários sumidos".
      allow list: if isManager() && belongsToCongregation(resource.data.congregationId);
    }
    
    // Regras para a Coleção de Congregações
    match /congregations/{congId} {
      // Qualquer usuário autenticado pode ler os dados da congregação (necessário para obter o nome, etc.)
      allow read: if request.auth != null && belongsToCongregation(congId);
      
      // Apenas administradores da congregação podem alterar os dados dela.
      allow write: if isAdmin() && belongsToCongregation(congId);

      // Regras para subcoleções
      match /{document=**} {
        // Permite que usuários da mesma congregação leiam e escrevam nos documentos aninhados
        // (territórios, quadras, casas, histórico). As permissões mais granulares são tratadas
        // pela UI, mas a regra de segurança garante o isolamento por congregação.
        allow read, write: if request.auth != null && belongsToCongregation(congId);
      }
    }
  }
}
