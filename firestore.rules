
rules_version = '2';

// Forçando a atualização das regras em [timestamp]
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Regras para a Coleção de Congregações
    match /congregations/{congId} {
      // QUALQUER UM PODE LER a lista de congregações ou um documento específico.
      // Isso é necessário para a página de cadastro verificar se um número de congregação existe.
      // A informação (nome/número) não é sensível.
      allow read: if true;

      // Apenas administradores podem criar, atualizar ou deletar congregações.
      allow write: if getUserData().role == 'Administrador';

      // Regras para subcoleções de Territórios
      match /territories/{terrId} {
        allow read, write: if getUserData().congregationId == congId;

        match /quadras/{quadraId} {
          allow read, write: if getUserData().congregationId == congId;

          match /casas/{casaId} {
            allow read, write: if getUserData().congregationId == congId;
          }
        }
        
        match /activityHistory/{activityId} {
          allow read, write: if getUserData().congregationId == congId;
        }
      }
    }

    // Regras para a Coleção de Usuários
    match /users/{userId} {
      // Um usuário só pode ler seu próprio documento ou se for admin/dirigente da mesma congregação
      allow get: if request.auth.uid == userId || (getUserData().role in ['Administrador', 'Dirigente', 'Servo de Territórios'] && getUserData().congregationId == resource.data.congregationId);
      
      // Qualquer usuário autenticado pode listar os usuários (a query no app já filtra pela congregação correta)
      allow list: if request.auth != null;

      // Permite que um novo usuário crie seu próprio perfil
      allow create: if request.auth.uid == userId;

      // Permite que o próprio usuário atualize seu perfil, ou que um Admin/Dirigente atualize
      // um usuário da *mesma* congregação.
      allow update: if request.auth.uid == userId ||
                       (getUserData().role in ['Administrador', 'Dirigente', 'Servo de Territórios'] &&
                        getUserData().congregationId == resource.data.congregationId);
      
      // Apenas Admins podem deletar usuários (e não a si mesmos)
      allow delete: if getUserData().role == 'Administrador' && request.auth.uid != userId;

      // Permite que o usuário leia e escreva em suas próprias notificações
      match /notifications/{notificationId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Regra para a coleção de tokens de reset de senha
    match /resetTokens/{tokenId} {
      // Apenas as Cloud Functions (acesso de servidor) podem ler e escrever aqui.
      allow read, write: if false; 
    }
    
    // Regra para a coleção de Feedbacks
    match /feedbacks/{feedbackId} {
      // Qualquer usuário autenticado pode criar um feedback.
      // Ninguém pode ler, atualizar ou deletar feedbacks através do app.
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }
  }
}
