rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNÇÕES AUXILIARES ---
    function isSignedIn() {
      return request.auth != null;
    }

    // Verifica se o ID da congregação do usuário logado é o mesmo que o do recurso solicitado
    function isUserInCongregation(congregationId) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.congregationId == congregationId;
    }
    
    // Verifica se o usuário tem a permissão de Administrador
    function isAdmin(congregationId) {
      return isUserInCongregation(congregationId) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrador';
    }

    // Verifica se o usuário tem a permissão de Dirigente
    function isDirigente(congregationId) {
      return isUserInCongregation(congregationId) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Administrador', 'Dirigente'];
    }

    // --- REGRAS PARA COLEÇÕES ---

    // Permite que qualquer pessoa crie uma nova congregação (necessário para a tela de cadastro inicial)
    // A leitura e atualização são restritas aos membros da congregação
    match /congregations/{congregationId} {
      allow create: if isSignedIn();
      allow read, update: if isUserInCongregation(congregationId);
      // A exclusão de congregação deve ser feita por um processo seguro no backend (Cloud Function)
      allow delete: if false; 
    }

    // Regras para a coleção 'users'
    match /users/{userId} {
      // Um usuário pode criar seu próprio documento (ao se cadastrar)
      allow create: if request.auth.uid == userId;
      
      // Um usuário pode ler e atualizar seu próprio perfil.
      // Dirigentes e Admins da mesma congregação também podem ler e atualizar perfis.
      allow read, update: if request.auth.uid == userId || 
                           isDirigente(get(/databases/$(database)/documents/users/$(userId)).data.congregationId);
                           
      // Apenas um Administrador pode excluir um usuário (e não a si mesmo)
      allow delete: if isAdmin(get(/databases/$(database)/documents/users/$(userId)).data.congregationId) && request.auth.uid != userId;
    }
    
    // Regras para subcoleções de congregações (territórios, etc.)
    match /congregations/{congregationId}/{document=**} {
        // Permite leitura e escrita para Dirigentes e Administradores da congregação
        allow read, write: if isDirigente(congregationId);
    }
    
    // Regras específicas para a subcoleção 'casas' (permitir que publicadores atualizem)
    match /congregations/{congregationId}/territories/{territoryId}/quadras/{quadraId}/casas/{casaId} {
        // Permite a leitura por qualquer membro da congregação
        allow read: if isUserInCongregation(congregationId);
        // Permite escrita (marcar/desmarcar) por qualquer membro da congregação
        // A lógica de negócio mais complexa (como quem pode editar o nome) é tratada na UI
        allow write: if isUserInCongregation(congregationId);
    }
  }
}
