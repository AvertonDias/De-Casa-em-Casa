rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- REGRA DE DEBUG ---
    // Permite que qualquer usuário autenticado leia qualquer documento na coleção 'users'.
    // Removemos toda a lógica de papéis e status TEMPORARIAMENTE.
    match /users/{userId} {
      allow read: if request.auth != null; 
      // Manter as outras regras como estão por enquanto.
      allow create: if true; // Mantendo o cadastro aberto
      allow update, delete: if request.auth.uid == userId; // Só pode editar a si mesmo
    }

    // Deixe as outras regras (congregations, territories, etc.) como estavam, 
    // ou comente-as se quiser isolar ainda mais.
    // Por agora, apenas alterar a regra de leitura de 'users' deve ser suficiente.

    match /congregations/{congregationId}/{document=**} {
        allow read, write: if request.auth != null;
    }
  }
}
