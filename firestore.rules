rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funções Auxiliares Seguras ---
    function isAuth() {
      return request.auth != null;
    }

    function userExists(userId) {
      return exists(/databases/$(database)/documents/users/$(userId));
    }

    function getUserData(userId) {
      return isAuth() && userExists(userId) ? get(/databases/$(database)/documents/users/$(userId)).data : null;
    }
    
    function isUserInCongregation(congId) {
      let userData = getUserData(request.auth.uid);
      return userData != null && userData.congregationId == congId;
    }
    
    function isRole(role) {
      let userData = getUserData(request.auth.uid);
      return userData != null && userData.role == role;
    }
    
    function isManager() {
      let userData = getUserData(request.auth.uid);
      return userData != null && userData.role in ['Administrador', 'Dirigente', 'Servo de Territórios'];
    }

    // --- Coleções ---

    match /congregations/{congId} {
      allow read: if true;
      allow write: if isRole('Administrador');

      match /territories/{terrId} {
        allow read, write: if isUserInCongregation(congId);

        match /quadras/{quadraId} {
          allow read, write: if isUserInCongregation(congId);

          match /casas/{casaId} {
            allow read, write: if isUserInCongregation(congId);
          }
        }

        match /activityHistory/{activityId} {
            allow read, write: if isUserInCongregation(congId);
        }
      }
    }

    match /users/{userId} {
      // Usuário pode criar seu próprio documento (essencial para o cadastro).
      allow create: if request.auth.uid == userId;

      // Usuário pode ler seu próprio perfil. CRÍTICO PARA O FUNCIONAMENTO DO APP.
      allow get: if request.auth.uid == userId;

      // Usuário pode atualizar seu próprio perfil (nome, whatsapp, etc).
      allow update: if request.auth.uid == userId && 
                      // Impede o usuário de alterar seu próprio papel, status ou ID de congregação.
                      !('role' in request.resource.data) &&
                      !('status' in request.resource.data) &&
                      !('congregationId' in request.resource.data);

      // Managers (Admin/Dirigente/Servo) podem ATUALIZAR outros usuários (status, papel).
      allow update: if isManager() && isUserInCongregation(resource.data.congregationId);

      // Admins podem DELETAR outros usuários, mas apenas da sua própria congregação e não a si mesmos.
      allow delete: if isRole('Administrador') && 
                      request.auth.uid != userId && 
                      isUserInCongregation(getUserData(userId).congregationId);
      
      // Permite a listagem de usuários APENAS se a consulta for filtrada pela congregação do usuário logado.
      allow list: if isAuth() && request.query.where[0][2] == getUserData(request.auth.uid).congregationId;


      match /notifications/{notificationId} {
        // Usuário pode ler e escrever suas próprias notificações.
        allow read, write: if request.auth.uid == userId;
      }
    }

    match /feedbacks/{feedbackId} {
      allow create: if isAuth();
      allow read, update, delete: if false; 
    }

    match /resetTokens/{tokenId} {
      allow read, write: if false;
    }
  }
}
